# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Resend Email Service (Optional)
# For local development, use a placeholder value: re_placeholder_for_local_build
# For production, get your API key from https://resend.com/api-keys
# The app will work without a real API key - emails just won't be sent
RESEND_API_KEY=re_placeholder_for_local_build
EMAIL_FROM=Try Local Gresham <noreply@yourdomain.com>

# Application URL
# Used for email links and callbacks
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: https://trylocalor.com

# Stripe Configuration (for payment processing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
# Webhook secret for Stripe events (get this after creating webhook endpoint)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Subscription Price ID for $39/month business subscription (create in Stripe Dashboard -> Products)
STRIPE_SUBSCRIPTION_PRICE_ID=price_your_subscription_price_id_here
