rules_version = '2';

// Firebase Storage Security Rules for Try Local Gresham
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isBusinessOwner() {
      return isSignedIn() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'business_owner';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Valid image file types
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    // Business cover photos: businesses/{userId}/{filename}
    match /businesses/{userId}/{filename} {
      // Anyone can read (public images)
      allow read: if true;

      // Business owners can upload to their own folder
      allow create: if isOwner(userId) && isBusinessOwner() && isValidImage();

      // Business owners can update/delete their own images
      // Admins can update/delete any image
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // Product images: products/{userId}/{filename}
    match /products/{userId}/{filename} {
      // Anyone can read (public images)
      allow read: if true;

      // Business owners can upload to their own folder
      allow create: if isOwner(userId) && isBusinessOwner() && isValidImage();

      // Business owners can update/delete their own images
      // Admins can update/delete any image
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // Review images: reviews/{userId}/{businessId}/{filename}
    match /reviews/{userId}/{businessId}/{filename} {
      // Anyone can read (public review images)
      allow read: if true;

      // Users can upload review images to their own folder
      allow create: if isOwner(userId) && isSignedIn() && isValidImage();

      // Users can update/delete their own review images
      // Admins can delete any review image
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // User profile pictures: users/{userId}/{filename}
    // Includes profile photos and cover/background photos
    match /users/{userId}/{filename} {
      // Anyone can read (public profile images)
      allow read: if true;

      // Users can upload/update their own images
      allow create, update: if isOwner(userId);

      // Users can delete their own images, admins can delete any
      allow delete: if isOwner(userId) || isAdmin();
    }

    // Block all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
