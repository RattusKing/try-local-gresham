# Google Analytics (Optional)
# For local development, you can leave this empty or use a test ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Firebase Configuration (Client SDK - for browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=try-local.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=try-local
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=try-local.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Firebase Admin SDK Service Account (Server-side only - for API routes)
# Get this from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Copy the entire JSON file content as a single-line string
# FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"try-local",...}'

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Subscription Price ID for $39/month business subscription
STRIPE_SUBSCRIPTION_PRICE_ID=price_your_subscription_price_id_here

# Resend Email Service (Optional)
# For local development, use a placeholder value: re_placeholder_for_local_build
# For production, get your API key from https://resend.com/api-keys
# The app will work without a real API key - emails just won't be sent
RESEND_API_KEY=re_placeholder_for_local_build
EMAIL_FROM=Try Local Gresham <noreply@localhost>

# Application URL
# Used for email links and callbacks
NEXT_PUBLIC_APP_URL=http://localhost:3000
